{
  "permissions": {
    "allow": [
      "Bash(bun:*)",
      "Bash(npm:*)",
      "Bash(npx vitest:*)",
      "Bash(npx playwright:*)",
      "Bash(npx eslint:*)",
      "Bash(npx prettier:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(ls:*)",
      "Bash(cat package.json)",
      "Read(src/**)",
      "Read(supabase/**)",
      "Read(e2e/**)",
      "Read(docs/**)",
      "Read(public/**)",
      "Read(*.json)",
      "Read(*.md)",
      "Read(*.ts)",
      "Read(*.tsx)",
      "Read(*.js)",
      "Read(*.css)",
      "Edit(src/**)",
      "Edit(supabase/functions/**)",
      "Edit(e2e/**)",
      "Edit(docs/**)",
      "Write(src/**)",
      "Write(supabase/functions/**)",
      "Write(e2e/**)",
      "Write(docs/**)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(.env.local)",
      "Read(.env.test)",
      "Edit(.env)",
      "Edit(.env.*)",
      "Write(.env)",
      "Write(.env.*)",
      "Read(secrets/**)",
      "Read(.git/config)",
      "Bash(rm -rf:*)",
      "Bash(rm -r:*)",
      "Bash(sudo:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "FILE_PATH=$(cat | jq -r '.tool_input.file_path // empty'); if [ -n \"$FILE_PATH\" ] && echo \"$FILE_PATH\" | grep -qE '\\.(ts|tsx|js|jsx)$'; then npx prettier --write \"$FILE_PATH\" 2>/dev/null || true; fi"
          }
        ]
      }
    ]
  },
  "env": {
    "NODE_ENV": "development"
  }
}
